<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="5dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/categoryCard"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/categoryConstraint">

        <ImageView
            android:id="@+id/imageCategory"
            android:layout_width="96dp"
            android:layout_height="96dp"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintLeft_toLeftOf="@+id/categoryConstraint"
            app:layout_constraintTop_toTopOf="@+id/categoryConstraint"
            app:layout_constraintRight_toLeftOf="@id/categoryText"
            />

        <TextView
            android:id="@+id/categoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Category"
            app:layout_constraintLeft_toRightOf="@+id/imageCategory"
            app:layout_constraintTop_toTopOf="@id/imageCategory"
            app:layout_constraintBottom_toBottomOf="@id/imageCategory"
            android:paddingStart="16dp"
            android:textSize="16dp"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>